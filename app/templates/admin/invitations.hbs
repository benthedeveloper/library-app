<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |invitation|}}
      <tr>
        <th>{{invitation.id}}</th>
        <td>{{invitation.email}}</td>
        <td class="text-center">
          <button class="btn btn-xs btn-danger" {{action 'deleteInvitation' invitation}}>Delete</button>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>
