<h1>Contact</h1>

<form>
	<div class="form-group">
		{{input type="email" class="form-control" placeholder="Your email" value=emailAddress }}
	</div>
	<div class="form-group">
		{{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
	</div>
	<div class="form-group">
		<button class="btn btn-primary btn-lg" disabled={{isDisabled}} {{action 'send'}}>Send message</button>
	</div>
</form>

{{#if responseMessage}}
  <div id="responseMessage" class="alert alert-success">{{responseMessage}}</div>
{{/if}}